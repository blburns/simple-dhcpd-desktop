<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SimpleDhcpdDesktop.App.Views.PasswordDialog"
        Title="Administrator Password Required"
        Width="400"
        Height="200"
        MinWidth="350"
        MinHeight="180"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="{DynamicResource AppBackground}">
  <StackPanel Margin="24" Spacing="16">
    <TextBlock Text="This operation requires administrator privileges."
               TextWrapping="Wrap"
               FontSize="14" />
    <TextBlock Text="Please enter your password:"
               Classes="subheading"
               Margin="0,8,0,0" />
    <TextBox Name="PasswordBox"
             PasswordChar="â—"
             Watermark="Password"
             Margin="0,8,0,0" />
    <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Right"
                Spacing="12"
                Margin="0,16,0,0">
      <Button Content="Cancel"
              Click="CancelButton_Click"
              Padding="16,8"
              MinWidth="80"
              Classes="secondary" />
      <Button Content="OK"
              Click="OkButton_Click"
              Padding="16,8"
              MinWidth="80" />
    </StackPanel>
  </StackPanel>
</Window>
