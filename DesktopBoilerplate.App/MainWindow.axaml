<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DesktopBoilerplate.App.ViewModels"
        xmlns:models="clr-namespace:DesktopBoilerplate.App.Models"
        mc:Ignorable="d"
        d:DesignWidth="1100"
        d:DesignHeight="720"
        x:Class="DesktopBoilerplate.App.MainWindow"
        x:DataType="vm:ShellViewModel"
        Title="{Binding Metadata.Name}"
        Width="1100"
        Height="720"
        MinWidth="900"
        MinHeight="600"
        Background="{DynamicResource AppBackground}"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaTitleBarHeightHint="32">
  <Design.DataContext>
    <vm:ShellViewModel />
  </Design.DataContext>

  <Grid RowDefinitions="Auto,*">
    <Border Grid.Row="0"
            Background="{DynamicResource SidebarBackground}"
            Padding="24 16">
      <Grid ColumnDefinitions="*,Auto">
        <StackPanel>
          <TextBlock Text="{Binding Metadata.Name}"
                     Classes="heading" />
          <TextBlock Text="{Binding HeaderSubtitle}"
                     Classes="subheading"
                     Margin="0,2,0,0" />
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Grid.Column="1"
                    Spacing="12"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
          <Button Content="Docs"
                  Command="{Binding OpenDocumentationCommand}"
                  Classes="sidebar" />
          <Button Content="Source"
                  Command="{Binding OpenRepositoryCommand}"
                  Classes="sidebar" />
          <Button Content="Support"
                  Command="{Binding ContactSupportCommand}"
                  Classes="sidebar" />
        </StackPanel>
      </Grid>
    </Border>

    <Grid Grid.Row="1" ColumnDefinitions="260,Auto,*">
      <Border Grid.Column="0"
              Background="{DynamicResource SidebarBackground}"
              Padding="20 24 16 24">
        <StackPanel Spacing="12">
          <TextBlock Text="Navigation"
                     Classes="subheading"
                     Margin="0,0,0,8" />
          <ListBox ItemsSource="{Binding NavigationItems}"
                   SelectedItem="{Binding SelectedItem}"
                   Background="Transparent"
                   BorderThickness="0">
            <ListBox.Styles>
              <Style Selector="ListBoxItem">
                <Setter Property="CornerRadius" Value="{DynamicResource CornerRadiusMedium}" />
                <Setter Property="Padding" Value="12 10" />
                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                <Setter Property="Margin" Value="0 2" />
              </Style>
              <Style Selector="ListBoxItem:selected">
                <Setter Property="Background" Value="{DynamicResource BrandColor}" />
                <Setter Property="Foreground" Value="{DynamicResource AccentForeground}" />
              </Style>
            </ListBox.Styles>

            <ListBox.ItemTemplate>
              <DataTemplate x:DataType="models:NavigationItem">
                <Grid ColumnDefinitions="Auto,*">
                  <TextBlock Text="{Binding Icon}"
                             FontSize="18"
                             Margin="0,0,12,0"
                             VerticalAlignment="Center" />
                  <StackPanel>
                    <TextBlock Text="{Binding Title}"
                               FontWeight="SemiBold" />
                    <TextBlock Text="{Binding Subtitle}"
                               Classes="subheading" />
                  </StackPanel>
                </Grid>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
        </StackPanel>
      </Border>

      <GridSplitter Grid.Column="1"
                    Width="6"
                    HorizontalAlignment="Center"
                    Cursor="SizeWestEast"
                    Background="Transparent"
                    ResizeBehavior="PreviousAndNext"
                    ResizeDirection="Columns" />

      <ScrollViewer Grid.Column="2"
                    Padding="36"
                    Background="{DynamicResource AppBackground}">
        <StackPanel Spacing="24">
          <Border Background="{DynamicResource CardBackground}"
                  CornerRadius="{DynamicResource CornerRadiusMedium}"
                  Padding="24">
            <StackPanel>
              <TextBlock Text="{Binding SelectedItem.Title, FallbackValue=Overview}"
                         Classes="heading" />
              <TextBlock Text="{Binding SelectedItem.Subtitle, FallbackValue=Stay on top of your work.}"
                         Classes="subheading"
                         Margin="0,4,0,0" />
            </StackPanel>
          </Border>

          <UniformGrid Columns="2" Rows="2" ColumnSpacing="16" RowSpacing="16">
            <Border Background="{DynamicResource CardBackground}"
                    CornerRadius="{DynamicResource CornerRadiusMedium}"
                    Padding="20">
              <StackPanel>
                <TextBlock Text="Quick Start"
                           Classes="heading" />
                <TextBlock Text="Use this area to highlight the first-run experience or key onboarding steps."
                           TextWrapping="Wrap"
                           Margin="0,6,0,0" />
              </StackPanel>
            </Border>
            <Border Background="{DynamicResource CardBackground}"
                    CornerRadius="{DynamicResource CornerRadiusMedium}"
                    Padding="20">
              <StackPanel>
                <TextBlock Text="Recent Activity"
                           Classes="heading" />
                <TextBlock Text="Stream real-time events, notifications, or sync status updates here."
                           TextWrapping="Wrap"
                           Margin="0,6,0,0" />
              </StackPanel>
            </Border>
            <Border Background="{DynamicResource CardBackground}"
                    CornerRadius="{DynamicResource CornerRadiusMedium}"
                    Padding="20">
              <StackPanel>
                <TextBlock Text="Integrations"
                           Classes="heading" />
                <TextBlock Text="Surface connected services or integrations to encourage deeper engagement."
                           TextWrapping="Wrap"
                           Margin="0,6,0,0" />
              </StackPanel>
            </Border>
            <Border Background="{DynamicResource CardBackground}"
                    CornerRadius="{DynamicResource CornerRadiusMedium}"
                    Padding="20">
              <StackPanel>
                <TextBlock Text="Next Steps"
                           Classes="heading" />
                <TextBlock Text="Outline recommended tasks, upgrades, or announcements for users."
                           TextWrapping="Wrap"
                           Margin="0,6,0,0" />
              </StackPanel>
            </Border>
          </UniformGrid>
        </StackPanel>
      </ScrollViewer>
    </Grid>
  </Grid>
</Window>
